{
  "name": "show-me-skins-companion",
  "version": "1.0.0",
  "description": "Companion app for Show Me Skins - detects champion select and syncs with the website",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-icon": "node scripts/create-icon.mjs",
    "postinstall": "node scripts/create-icon.mjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^26.0.0",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.showmeskins.companion",
    "productName": "Show Me Skins Companion",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "signAndEditExecutable": false
    },
    "afterPack": "./scripts/patch-exe.js",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh",
      "runAfterFinish": false,
      "perMachine": false,
      "warningsAsErrors": false
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      "assets/icon.png"
    ]
  }
}
